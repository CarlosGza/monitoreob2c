<!DOCTYPE html>
<html >
<head>
    <% include ../partials/head %>
    <meta http-equiv="refresh" content="10">
    <link rel="shortcut icon" href="/img/favicon.png" />
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/proveedores.css" rel="stylesheet">
    <link href="/css/plugins/dataTables/datatables.min.css" rel="stylesheet" />
</head>
<body class="mini-navbar">

    <div id="wrapper">
        <% include ../partials/nav-izq %>
        <div id="page-wrapper" class="gray-bg">
            <% include ../partials/nav-top %>

            <!--inicia tabla Envios-->
            <div class="wrapper wrapper-content animated fadeInRight">
                <!-- Etiquetas -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Envios Activos</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">

                                <div class="table-responsive">
                                    <table id="GridEnvios" class="table table-striped table-bordered table-hover dataTable" role="grid">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>IdEnvio</th>
                                                <th>Cliente</th>
                                                <th>Usuario</th>
                                                <th>FechaInicio</th>
                                                <th>FechaFin</th>
                                                <th>Registros</th>
                                                <th>Exitosos</th>
                                                <th>NoExitosos</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody id="datos-tabla">
                                            <!--Pinta alertas en tabla proveedores--> 
                                            <% MonitorEnvios.forEach(function(record){ %>
                                            <% if (record.estado="En Proceso") { %>
                                            <tr style="background-color: LightGreen; font-weight: bold; color: black;">
                                            <% } else if (record.estado="Duplicados") { %>
                                            <tr style="background-color: Orange; font-weight: bold; color: black;">
                                            <%} else {%>
                                            <tr>
                                            <% } %>
                                                <td><%= record.idenviopr %></td>
                                                <td><%= record.cliente %></td>
                                                <td><%= record.usuario %></td>
                                                <td><%= record.fechainicio.substring(0,19).replace('T',' ') %></td>
                                                <td><%= record.fechafin.substring(0,19).replace('T',' ') %></td>
                                                <td><%= record.registros.toLocaleString('en') %></td>
                                                <td><%= record.exitosos.toLocaleString('en') %></td>
                                                <td><%= record.noexitosos.toLocaleString('en') %></td>
                                                <td><%= record.estado %></td>
                                            </tr>
                                            <% }) %>

                                        </tbody>
                                    </table>
                                    
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <!-- termina tabla Envios-->
            
            <% include ../partials/footer %>
        </div>
    </div>
    <% include ../partials/scripts %>
    
</body>
</html>